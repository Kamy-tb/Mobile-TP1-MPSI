<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Nom"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toTopOf="@+id/mail"
        app:layout_constraintStart_toStartOf="@+id/mail" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="98dp"
        android:autofillHints=""
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="nom"
        android:minHeight="48dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text=""
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="@+id/birthday"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/pwd"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="70dp"
        android:autofillHints=""
        android:background="@drawable/edit_text"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail"
        tools:ignore="TextContrastCheck" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:contentDescription="text_signin"
        android:text="Se connecter pour continuer"
        android:textColor="#4F4F4F"
        android:textSize="24sp"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="Mot de passe"
        android:fontFamily="sans-serif-condensed-medium"
        app:layout_constraintBottom_toTopOf="@+id/pwd"
        app:layout_constraintStart_toStartOf="@+id/pwd"
        app:layout_constraintTop_toBottomOf="@+id/mail" />



    <Button
        android:id="@+id/signin"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_bleu"
        android:contentDescription="sign_in"
        android:text="Se connecter"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwd" />


    <TextView
        android:id="@+id/forgetpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget password ?"
        app:layout_constraintEnd_toEndOf="@+id/pwd"
        app:layout_constraintTop_toBottomOf="@+id/pwd" />

    <ImageView
        android:id="@+id/eye"
        android:layout_width="26dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/pwd"
        app:layout_constraintEnd_toEndOf="@+id/pwd"
        app:layout_constraintTop_toTopOf="@+id/pwd"
        app:srcCompat="@drawable/eye_slash" />
</androidx.constraintlayout.widget.ConstraintLayout>